{
  "obsidian": {
    "enabled": true,
    "vault_path": "D:/ObsidianVault",
    "sync_interval": 300,
    "auto_sync": true,
    "folders": {
      "tasks": "Tasks",
      "calendar": "Calendar",
      "notes": "Notes",
      "daily": "Daily"
    },
    "templates": {
      "task": "templates/task.md",
      "daily": "templates/daily.md",
      "meeting": "templates/meeting.md"
    }
  },
  "mobile": {
    "enabled": true,
    "web_interface": {
      "enabled": true,
      "port": 8080,
      "host": "0.0.0.0",
      "ssl": false
    },
    "api": {
      "enabled": true,
      "rate_limit": 100,
      "cors": true
